<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Looking for</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Budget</th>
      <th>Move in data</th>
      <th>Stay length</th>
      <th>Occupation</th>
      <th>Children</th>
      <th>Is non smoker</th>
      <th>Is cat</th>
      <th>Is dog</th>
      <th>Is student</th>
      <th>Is lgbt</th>
      <th>Is cannabis</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.looking_for %></td>
        <td><%= profile.age %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.budget %></td>
        <td><%= profile.move_in_data %></td>
        <td><%= profile.stay_length %></td>
        <td><%= profile.occupation %></td>
        <td><%= profile.children %></td>
        <td><%= profile.is_non_smoker %></td>
        <td><%= profile.is_cat %></td>
        <td><%= profile.is_dog %></td>
        <td><%= profile.is_student %></td>
        <td><%= profile.is_lgbt %></td>
        <td><%= profile.is_cannabis %></td>
        <td><%= profile.description %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
